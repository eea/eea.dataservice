<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea">

<body>

<div metal:fill-slot="content-core">
    <style>
        dd {margin-left: 3em}

        #map_canvas {
            float: left;
            margin-right: 10px;
            margin-top: 3px; }
    </style>

    <!-- Short ID (debug) -->
    <tal:block define="field python:context.getField('shortId');
                       value python:field.getAccessor(context)()"
               condition="value">
        <dt i18n:translate="dataset_shortid">Short ID:</dt>
        <dd tal:content="structure value">Short ID</dd>
    </tal:block>

    <!-- Category -->
    <tal:block define="field python:context.getField('category');
                       value python:field.getAccessor(context)()"
              condition="value">
        <dt i18n:translate="dataset_category">Category</dt>
        <dd tal:content="value" />
    </tal:block>

    <div class="visualClear">&nbsp;</div>
    <metal:listing use-macro="here/folder_listing/macros/listing" />

</div>

</body>
</html>
