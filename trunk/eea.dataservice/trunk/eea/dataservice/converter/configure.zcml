<configure xmlns="http://namespaces.zope.org/browser"
           xmlns:zope="http://namespaces.zope.org/zope"
           xmlns:five="http://namespaces.zope.org/five"
           xmlns:browser="http://namespaces.zope.org/browser"
           i18n_domain="eea.dataservice">

  <browser:page
      for="*"
      name="checkFiguresConvertion"
      permission="cmf.ModifyPortalContent"
      class=".converter.CheckFiguresConvertion"
      />

  <browser:page
      for="eea.dataservice.interfaces.IEEAFigureFile"
      name="convertMap"
      permission="cmf.ModifyPortalContent"
      class=".converter.ConvertMap"
      />

  <browser:page
      for="eea.dataservice.interfaces.IEEAFigure"
      name="convertAllFigures"
      permission="cmf.ModifyPortalContent"
      class=".converter.ConvertAllFigures"
      />

  <browser:page
      for="eea.dataservice.interfaces.IEEAFigure"
      name="convertAction"
      permission="cmf.ModifyPortalContent"
      class=".converter.ConvertAction"
      />

  <browser:page
      for="eea.dataservice.interfaces.IEEAFigureFile"
      name="convertFigure"
      template="convert_figure.pt"
      permission="zope2.View"
      />

  <browser:page
      for="*"
      name="convertionInfo"
      permission="cmf.ModifyPortalContent"
      class=".converter.ConvertionInfo"
      />

  <browser:menuItem
      for="eea.dataservice.interfaces.IEEAFigureFile"
      menu="object_buttons"
      title="Convert figure"
      action="@@convertFigure"
      description="Convert figure to predefined formats and resolutions"
      permission="cmf.ModifyPortalContent"
      />

  <browser:menuItem
      for="eea.dataservice.interfaces.IEEAFigure"
      menu="object_buttons"
      title="Convert all figures"
      action="@@convertAction"
      description="Convert all figures to predefined formats and resolutions"
      permission="cmf.ModifyPortalContent"
      />

  <browser:resource
      name="eea.dataservice.convert_figure.js"
      file="convert_figure.js"
     />

  <browser:resource
      name="eea.dataservice.convert_figures.js"
      file="convert_figures.js"
     />

</configure>
