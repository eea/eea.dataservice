<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Selection Widgets -->

    <metal:view_macro define-macro="view"
                      tal:define="vocab python:field.Vocabulary(here);
                      value python:accessor();
                      display python:here.displayValue(vocab, value);"
                      tal:replace="structure display" />

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
        <metal:fill fill-slot="widget_body"
                    tal:define="vocab python:field.Vocabulary(here);
                    format python:test(widget.format, widget.format, 'select');
                    vlen  python: len(vocab)">

          <input type="hidden"
                 value=""
                 tal:condition="not:field/required|nothing"
                 tal:attributes="name string:$fieldName:default:list;" />
          <span tal:repeat="item vocab" tal:omit-tag=""
                tal:condition="python:format=='checkbox'">
            <tal:block tal:define="tabindex tabindex/next">
                <div class="ArchetypesMultiSelectionValue" id=""
                        tal:attributes="id string:archetypes-value-${fieldName}_${repeat/item/number}">
              <input
               tal:attributes="type string:checkbox;
               name string:$fieldName:list;
               id string:${fieldName}_${repeat/item/number};
               tabindex tabindex;
               checked python:test(here.unicodeTestIn(item, value), 'checked', None);
               value nocall:item;"/>
          <label tal:content="python:here.translate(vocab.getMsgId(item), default=vocab.getValue(item))"
                 i18n:translate=""
                 tal:attributes="for string:${fieldName}_${repeat/item/number}" />
              </div>
            </tal:block>
          </span>

          <p style="margin-bottom: 3px">
            <span id="map_btn" style="cursor: pointer; color: green">[-]</span> Show map preview
          </p>
          <!-- Country groups -->
          <select multiple="multiple"
                  tal:condition="python:format=='select'"
                  tal:attributes="name string:${fieldName}_groups:list;
                                  id string:${fieldName}_groups;
                                  size widget/size;
                                  tabindex tabindex/next;"
                  tal:define="groups here/@@getCountryGroups"
                  style="padding: 2px; float: left; margin-right: 1em">

              <option tal:repeat="item groups"
                      selected=""
                      tal:attributes="value python:item[0];
                      selected python:test(here.unicodeTestIn(item[0], value), 'selected', None);"
                      tal:content="python:item[1]"
                      style="padding:1px 8px 1px 8px"
                      i18n:translate="" />
          </select>

          <!-- Countries -->
          <select multiple="multiple"
                  tal:condition="python:format=='select'"
                  tal:attributes="name string:${fieldName}:list;
                                  id fieldName;
                                  size widget/size;
                                  tabindex tabindex/next;"
                  tal:define="coutries here/@@getCountries"
                  style="padding: 2px; float:left; margin-right: 1em">

              <option tal:repeat="item coutries"
                      selected=""
                      tal:attributes="value python:item[0];
                                      selected python:test(here.unicodeTestIn(item[0], value), 'selected', None);"
                      tal:content="python:item[1]"
                      style="padding:1px 8px 1px 8px; float: left"
                      i18n:translate="" />
          </select>
          <br clear="all"/>

          <!-- Map preview -->
          <style>
            #map_canvas {
              margin-top: 3px;
              display: none;
            }
          </style>

          <script language="JavaScript">
            jQuery(document).ready(function() {
              setMapBtn();
              setCountrySync();
            });

            // Show/Hide map preview
            function setMapBtn() {
              jQuery('#map_btn').click(function () { showMap() });
            };

            function showMap() {
              if (jQuery('#map_btn').html() == '[-]') {
                jQuery('#map_canvas').css("display","block");
                jQuery('#map_btn').html('[x]');
              }
              else {
                jQuery('#map_canvas').css("display","none");
                jQuery('#map_btn').html('[-]');
              }
            };

            // Synchronize groups and countries
            function setCountrySync() {
              jQuery('#geographicCoverage').change(function () { syncCountries() });
              jQuery('#geographicCoverage_groups').change(function () { syncCountries() });
            }

            function syncCountries() {
              var sel_countries = {};
              var res_countries = [];

              // Get unique country codes
              jQuery.each(jQuery('#geographicCoverage_groups').val(), function() {
                jQuery.get('@@getCountriesByGroup', {group_id:this},
                  function(data){
                    //TODO: fix me, data is a string not a list
                    jQuery.each(data, function() {
                      sel_countries[this] = this;
                    })
                })
              })

              jQuery.each(jQuery('#geographicCoverage').val(), function() {
                sel_countries[this] = this;
              })

              for (cc in sel_countries) {
                res_countries[res_countries.length] = cc;
              }

              // Sync countries
              jQuery('#geographicCoverage').val(res_countries);

              // Sync country groups
              //TODO: fix me

              // Update map
              //TODO: fix me
            }
          </script>

          <tal:map define="map nocall:here/@@getGeographicalCoverageMap; map python:map(cc=value);"
                   content="structure map" />
          <div id='map_canvas'></div>


        </metal:fill>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/multiselection/macros/edit">
      </div>
    </div>

    <metal:hidden_macro define-macro="hidden">
      <input type="hidden"
             tal:define="value python:accessor()"
             name=""
             value=""
             tabindex="#"
             tal:attributes="name fieldName;
                             value python:'\n'.join(value);
                             tabindex tabindex/next;" />
    </metal:hidden_macro>

  </body>
</html>

