<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea.translations">

<body>

<div metal:fill-slot="main">

    <!-- Title -->
    <h1 tal:content="context/pretty_title_or_id">Title of the Datafile</h1>
    <div class="documentActions languages">
        <tal:lang tal:condition="exists: here/global_languageselector">
            <metal:lang use-macro="here/global_languageselector/macros/language" />
        </tal:lang>
    </div>
    <div class="visualClear">&nbsp;</div>

    <!-- Description -->
    <p class="publicationDescription" tal:content="context/Description" />

    <!-- Category -->
    <tal:block define="field python:context.getField('category');
                       value python:field.getAccessor(context)()"
              condition="value">
        <dt i18n:translate="dataset_category">Category</dt>
        <dd tal:content="value" />
    </tal:block>

    <!-- Original download link -->
    <tal:block define="field python:context.getField('download_link');
                       value python:field.getAccessor(context)()"
              condition="value">
        <dt i18n:translate="dataset_download_link">Original download link</dt>
        <dd><a tal:attributes="href value" tal:content="value" title="download" /></dd>
    </tal:block>

    <!-- File -->
   <tal:block define="field python:context.getField('file');
                       accessor python:field.getAccessor(context)();
                       icon accessor/getBestIcon | nothing;
                       filename accessor/filename | nothing;
                       size accessor/get_size | python:accessor and len(accessor) or 0;"
              condition="filename">
        <dt i18n:translate="dataset_download_link">Uploaded file</dt>
        <dd>
            <a href="" tal:attributes="href string:${context/absolute_url}/at_download/file">
                <img tal:condition="icon" src=""
                     tal:attributes="src string:${context/portal_url}/$icon"/>
                <span tal:content="filename" />
            </a>
            (<span tal:content="python:context.lookupMime(field.getContentType(context))">ContentType</span>
            <tal:size content="python:'%sKb' % (size / 1024)">0Kb</tal:size>)
        </dd>
    </tal:block>


    <!-- Short ID -->
    <!-- tal:block define="field python:context.getField('short_id');
                       value python:field.getAccessor(context)()"
              condition="value">
        <dt i18n:translate="dataset_shortId">Short ID</dt>
        <dd tal:content="value" />
    </tal:block -->

    <!-- Table ID -->
    <!-- tal:block define="field python:context.getField('table_id');
                       value python:field.getAccessor(context)()"
              condition="value">
        <dt i18n:translate="dataset_tableId">Table ID</dt>
        <dd tal:content="value" />
    </tal:block -->

