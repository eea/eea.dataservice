<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea.translations">

<body>

<div metal:fill-slot="main">
    <style>
        dd {margin-left: 3em}
    </style>

    <!-- BASIC PROPERTIES -->
    <!-- Title -->
    <h1 tal:content="here/pretty_title_or_id">Title of the Dataset</h1>
    <div class="documentActions languages">
        <tal:lang tal:condition="exists: here/global_languageselector">
            <metal:lang use-macro="here/global_languageselector/macros/language" />
        </tal:lang>
    </div>
    <div class="visualClear">&nbsp;</div>

    <!-- Description -->
    <div class="publicationDescription">
        <strong tal:content="here/Description" />
    </div>

    <!-- Themes -->
    <metal:themes use-macro="here/portlet_themes_object/macros/portlet" />


    <!-- META DATA -->
    <h4>Meta data</h4>
    <div style="margin-left: 5%;">
    <dl>

    <!-- Rights -->
    <dt i18n:translate="dataset_rights">Rights:</dt>
    <dd tal:content="structure python:here.Rights().replace('\n', '<br />')" />

    <!-- EEA management plan code -->
    <dt i18n:translate="dataset_plan_code">Last upload:</dt>
    <tal:block define="
        lu_field python:here.getField('effectiveDate');
        lu_value python:lu_field.getAccessor(here)();">
        <dd tal:content="structure lu_value">Last upload</dd>
    </tal:block>

    <!-- Scale of the data set -->
    <dt i18n:translate="dataset_scale">Scale of the data set:</dt>
    <tal:block define="
        sc_field python:here.getField('scale');
        sc_value python:sc_field.getAccessor(here)();">
        <dd><span>1:</span><tal:scale content="structure sc_value" /></dd>
    </tal:block>

    <!-- EEA management plan code -->
    <dt i18n:translate="dataset_plan_code">EEA management plan code:</dt>
    <tal:block define="
        mp_field python:here.getField('eea_mpcode');
        mp_value python:mp_field.getAccessor(here)();">
        <dd tal:content="structure mp_value">EEA management plan code</dd>
    </tal:block>

    <!-- Additional information -->
    <dt i18n:translate="dataset_aditional_info">Additional information:</dt>
    <tal:block define="
        mi_field python:here.getField('moreInfo');
        mi_value python:mi_field.getAccessor(here)();">
        <dd tal:content="structure mi_value">Additional information</dd>
    </tal:block>

    <!-- Disclaimer -->
    <dt i18n:translate="dataset_disclaimer">Disclaimer:</dt>
    <tal:block define="
        d_field python:here.getField('disclaimer');
        d_value python:d_field.getAccessor(here)();">
        <dd tal:content="structure d_value">Disclaimer</dd>
    </tal:block>

    <!-- Geographic accuracy -->
    <dt i18n:translate="dataset_accuracy">Geographic accuracy:</dt>
    <tal:block define="
        ac_field python:here.getField('geoAccuracy');
        ac_value python:ac_field.getAccessor(here)();">
        <dd tal:content="structure ac_value">Geographic accuracy</dd>
    </tal:block>

    <!-- Source -->
    <dt i18n:translate="dataset_source">Source:</dt>
    <tal:block define="
        s_field python:here.getField('source');
        s_vocab python:s_field.Vocabulary(here);
        s_values python:s_field.getAccessor(here)();
        s_value python:here.displayValue(s_vocab, s_values)">
        <dd tal:content="structure s_value">source</dd>
    </tal:block>

    <!-- Methodology -->
    <dt i18n:translate="dataset_methodology">Methodology:</dt>
    <tal:block define="
        met_field python:here.getField('methodology');
        met_value python:met_field.getAccessor(here)();">
        <dd tal:content="structure met_value">Methodology</dd>
    </tal:block>

    <!-- Unit -->
    <dt i18n:translate="dataset_unit">Unit:</dt>
    <tal:block define="
        u_field python:here.getField('unit');
        u_value python:u_field.getAccessor(here)();">
        <dd tal:content="structure u_value">Unit</dd>
    </tal:block>

    <!-- Temporal coverage -->
    <dt i18n:translate="dataset_temporal_coverage">Temporal coverage:</dt>
    <dd tal:content="here/formatTempCoverage" />
    
    <tal:block define="
        u_field python:here.getField('temporal_coverage');
        u_value python:u_field.getAccessor(here)();">
        <dd tal:content="structure u_value">Unit</dd>
    </tal:block>





    </dl>
    </div>
    <br clear="all" />
</div>

</body>
</html>
