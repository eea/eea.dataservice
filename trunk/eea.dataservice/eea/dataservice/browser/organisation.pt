<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea.translations">

<body>

<div metal:fill-slot="main">

    <!-- Title -->
    <h1 tal:content="here/pretty_title_or_id">Title of the Dataset</h1>
    <div class="documentActions languages">
        <tal:lang tal:condition="exists: here/global_languageselector">
            <metal:lang use-macro="here/global_languageselector/macros/language" />
        </tal:lang>
    </div>
    <div class="visualClear">&nbsp;</div>

    <!-- Description -->
    <div class="publicationDescription">
        <strong tal:content="here/Description" />
    </div>

    <!-- #TODO: implement below -->
    <p>50 data set(s)</p>

    <!-- Organisation category -->
    <tal:block define="field python:here.getField('organisationType');
                       value python:field.getAccessor(here)()"
              condition="value">
        <dt i18n:translate="dataset_url">Organisation category</dt>
        <dd tal:content="python:here.getOrganisationCategories()[value].Title()" />
    </tal:block>

    <!-- URL -->
    <tal:block define="field python:here.getField('organisationUrl');
                       value python:field.getAccessor(here)()"
              condition="value">
        <dt i18n:translate="dataset_url">URL</dt>
        <dd><a tal:attributes="href value" title="" href="" tal:content="value" /></dd>
    </tal:block>
    
    <!-- Address -->
    <tal:block define="field python:here.getField('location');
                       value python:field.getAccessor(here)()"
              condition="value">
        <dt i18n:translate="dataset_address">Address</dt>
        <dd tal:content="structure value" />
    </tal:block>

    <!-- Data policy -->
    <tal:block define="field python:here.getField('data_policy');
                       value python:field.getAccessor(here)()"
              condition="value">
        <dt i18n:translate="dataset_policy">Data policy</dt>
        <dd tal:content="structure value" />
    </tal:block>

    <!-- Map -->
    <tal:block define="field python:here.getField('location');
                       value python:field.getAccessor(here)()"
              condition="value">
        <dt i18n:translate="dataset_map">Map location</dt>
        <tal:block tal:condition="here/@@geopositionMap|nothing">
            <tal:map replace="structure here/@@geopositionMap" /><br />
        </tal:block>
    </tal:block>

</div>

</body>
</html>